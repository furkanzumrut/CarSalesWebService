<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:cxf="http://cxf.apache.org/core" xmlns:jaxws="http://cxf.apache.org/jaxws"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.2.xsd">

	<!-- activates annotations (@Service, @Component, @Autowired) -->
	<context:component-scan base-package="com.auto.jaxws.cxf.ws" />
	<context:component-scan base-package="com.auto.jaxws.cxf.dao.impl" />
	<!-- <tx:annotation-driven transaction-manager="transactionManager" /> -->
	<tx:annotation-driven proxy-target-class="true"
		transaction-manager="transactionManager" />
	<!-- publish the web service -->
	<!-- <jaxws:endpoint id="teamService" implementor="com.danielme.demo.jaxws.cxf.ws.TeamServiceImpl" 
		address="/v/1/teamService" /> -->

	<!--spring cache -->
	<bean id="cacheManager" class="org.springframework.cache.support.SimpleCacheManager">
		<property name="caches">
			<set>
				<bean
					class="org.springframework.cache.concurrent.ConcurrentMapCacheFactoryBean"
					p:name="task" />
			</set>
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean
		class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject">
			<bean
				class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
				<property name="targetClass" value="java.lang.System" />
				<property name="targetMethod" value="getProperties" />
			</bean>
		</property>
		<property name="targetMethod" value="putAll" />
		<property name="arguments">
			<util:properties>
				<prop key="org.apache.cxf.stax.allowInsecureParser">true</prop>
			</util:properties>
		</property>
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />

		<property name="mappingResources">
			<list>
				<value>com/auto/jaxws/cxf/model/Auto.hbm.xml</value>
				<value>com/auto/jaxws/cxf/model/Autocategory.hbm.xml</value>
				<value>com/auto/jaxws/cxf/model/Autofuel.hbm.xml</value>
				<value>com/auto/jaxws/cxf/model/Autogear.hbm.xml</value>
				<value>com/auto/jaxws/cxf/model/Autoimages.hbm.xml</value>
				<value>com/auto/jaxws/cxf/model/Autointerrior.hbm.xml</value>
				<value>com/auto/jaxws/cxf/model/Autorim.hbm.xml</value>
				<value>com/auto/jaxws/cxf/model/Autosubcategory.hbm.xml</value>
				<value>com/auto/jaxws/cxf/model/Autotire.hbm.xml</value>
				<value>com/auto/jaxws/cxf/model/Customer.hbm.xml</value>
				<value>com/auto/jaxws/cxf/model/Soldcars.hbm.xml</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</prop>
				<!-- <prop key="hibernate.current_session_context_class">thread</prop> -->
				<prop key="hibernate.enable_lazy_load_no_trans">true</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.c3p0.min_size">5</prop>
				<prop key="hibernate.c3p0.max_size">10</prop>
				<prop key="hibernate.c3p0.timeout">300</prop>
				<prop key="hibernate.c3p0.max_statements">50</prop>
				<prop key="hibernate.c3p0.idle_test_period">3000</prop>
				<prop key="hibernate.cache.use_second_level_cache">true</prop>
				<prop key="hibernate.cache.use_query_cache">true</prop>
				<prop key="hibernate.cache.provider_class">net.sf.ehcache.hibernate.SingletonEhCacheProvider
				</prop>
				<prop key="hibernate.cache.use_query_cache">true</prop>
				<prop key="hibernate.cache.provider_configuration_file_resource_path">ehcache.xml</prop>
			</props>
		</property>

	</bean>


	<bean id="autoDao" class="com.auto.jaxws.cxf.dao.impl.AutoDao">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="autoService" class="com.auto.jaxws.cxf.ws.AutoService">
		<property name="autoDao" ref="autoDao" />
	</bean>




	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="org.postgresql.Driver" />
		<property name="url"
			value="jdbc:postgresql://carsalesdb.ckbwbgfnwxca.eu-west-1.rds.amazonaws.com:5432/carsalesdb" />
		<property name="username" value="awuser" />
		<property name="password" value="fz199300" />

	</bean>


	
	<!-- references a spring bean -->
	<!--  <bean id="teamService" class="com.danielme.demo.jaxws.cxf.ws.TeamService"/> -->


	<!-- WHEN YOU WANT TO MAKE SURE COMMENT ALL SERVICES -->
	<bean id="jsonProvider" class="org.codehaus.jackson.jaxrs.JacksonJsonProvider" />

	<jaxrs:server id="autoServiceREST" address="/v/1/rest/AutoService">
		<jaxrs:serviceBeans>
			<ref bean="autoService" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
			<ref bean='jsonProvider' />
		</jaxrs:providers>
	</jaxrs:server>
	<jaxws:endpoint id="autoServiceWS" implementor="#autoService"
		address="/v/1/soap/autoService" />
	<!-- WHEN YOU WANT TO RUN TEST MAKE SURE COMMENT ALL SERVICES -->

</beans>